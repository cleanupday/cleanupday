---
import Link from "./Link.astro"; 
import Button from "./Button.astro";

---
<div x-data="{ showmenu: false }" class="bg-dark-green p-4 fixed lg:static w-full bgg-slate-200 drop-shadow-md z-40 top-0" >
    <div id="navbar" class="flex flex-row justify-between">
        <div id="logo" class="my-auto lg:text-2xl">
            <a href="/">
                <img src="/icons/logo.png" alt="" class="sm:max-h-[80px] md:max-h-[100px] lg:max-h-[160px]">
            </a>
        </div>
        <!-- Desktop Menu -->
        <nav id="desktopmenu" class="hidden lg:block content-center sticky top-0">
            <ul class="lg:flex flex-row gap-12 ">
                <li> <Link href="/how">How To</Link></li>
                <li> <Link href="/ressourcesite">Resources</Link></li>
                <li> <Link href="https://www.worldcleanupday.org/">World Clean Up Day</Link></li>
                <li><div class="pr-20"><Button>Registrer dit bidrag</Button></div></li>
            </ul>
             
        </nav>
        <button id="burgermenu" class="lg:hidden text-2xl font-bold text-white uppercase" x-on:click="showmenu = ! showmenu">Menu</button>
    </div>
    <!-- Bobile menu -->
    <nav id="mobilmenu" class="flex flex-col content-center justify-content-center pt-4 bg-dark-green " 
    x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
        <ul class="flex flex-col text-center gap-10 py-10">
            <li> <Link href="/how">How To</Link></li>
            <li> <Link href="/ressourcesite">Resources</Link></li>
            <li> <Link href="https://www.worldcleanupday.org/">World Clean Up Day</Link></li>
            <li><div class="px-auto"><Button>Registrer dit bidrag</Button></div> </li>
    </nav>
</div>


